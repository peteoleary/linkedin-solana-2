{
    "compilerOptions": {
      "moduleResolution": "node",
      "target": "esnext",
      "module": "commonjs",
      "jsx": "react-jsx",
      "lib": [
        "es2015",
        "es2016",
        "es2017",
        "dom"
      ],
      "strict": true,
      "sourceMap": true,
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noImplicitAny": true,
      "typeRoots": [
        "types",
        "node_modules/@types"
      ]
    },
    "include": [
      "src/**/*"
    ]
  }